{
  "name": "typing-roguelike",
  "productName": "打字肉鸽",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron-vite dev",
    "build": "tsc && vite build",
    "build:electron": "electron-vite build",
    "preview": "vite preview",
    "preview:electron": "electron-vite preview",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder -mwl",
    "release": "npm run build:electron && npm run dist",
    "release:win": "npm run build:electron && npm run dist:win",
    "release:mac": "npm run build:electron && npm run dist:mac",
    "release:linux": "npm run build:electron && npm run dist:linux",
    "clean": "rm -rf dist dist-electron release",
    "clean:release": "rm -rf release",
    "verify": "node scripts/verify-build.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/howler": "^2.2.12",
    "electron": "^34.0.0",
    "electron-builder": "^26.0.0",
    "electron-vite": "^3.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "pixi.js": "^8.16.0",
    "steamworks.js": "^0.4.0"
  }
}
